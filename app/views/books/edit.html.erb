<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<h1>Editing Book</h1>
		<% if @user == current_user  %>
			<%= form_for(@book) do |f| %>
				<h4>Title</h4>
				<%= f.text_field :title %>
				<h4>Opinion</h4>
				<%= f.text_area :body %><br>
				<%= f.submit "Update Book" %>
			<% end %>
			<%= link_to "Show", book_path(@book), class: "book_#{@book.id}" %>
			<%= link_to "Back", books_path, class: "back" %>
		<% end %>
	</div>
</div>
